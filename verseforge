import React, { useState, useEffect, useRef } from ‘react’;
import { Book, Edit3, Lightbulb, Layout, Settings, Share2, ShoppingCart, BarChart3, FileText, Download, Image, Palette, Type, Calendar, DollarSign, Globe, Mic, Play, Save, Plus, X, ChevronRight, ChevronLeft, Search, Tag, Clock, Link as LinkIcon, Eye, Wand2, Sparkles, Zap, Target, TrendingUp, Music, Layers, Grid, AlignLeft, Copy, Check } from ‘lucide-react’;

const VerseForge = () => {
const [activeTab, setActiveTab] = useState(‘write’);
const [poems, setPoems] = useState([
{ id: 1, title: ‘Untitled’, content: ‘’, category: ‘draft’, tags: [], created: new Date(), modified: new Date() }
]);
const [currentPoem, setCurrentPoem] = useState(poems[0]);
const [ideas, setIdeas] = useState([]);
const [research, setResearch] = useState([]);
const [bookSections, setBookSections] = useState([]);
const [showNewIdea, setShowNewIdea] = useState(false);
const [showNewResearch, setShowNewResearch] = useState(false);
const [bookConfig, setBookConfig] = useState({
title: ‘My Poetry Collection’,
author: ‘Author Name’,
font: ‘Georgia’,
fontSize: 12,
lineSpacing: 1.8,
theme: ‘classic’,
coverColor: ‘#3a3a3a’,
textColor: ‘#2c2c2c’
});
const [storeConfig, setStoreConfig] = useState({
products: [],
paymentEnabled: false
});
const [constraintMode, setConstraintMode] = useState({
enabled: false,
syllables: null,
rhymeScheme: ‘’,
meter: ‘’
});
const [aiSuggestions, setAiSuggestions] = useState([]);
const [versions, setVersions] = useState([]);
const [selectedTemplate, setSelectedTemplate] = useState(‘minimal’);
const [showShareModal, setShowShareModal] = useState(false);
const [showExportModal, setShowExportModal] = useState(false);
const [showStoreModal, setShowStoreModal] = useState(false);
const [copied, setCopied] = useState(false);

const templates = {
minimal: { bg: ‘#ffffff’, accent: ‘#3a3a3a’, font: ‘Georgia’ },
gothic: { bg: ‘#1a1a1a’, accent: ‘#8b0000’, font: ‘Crimson Text’ },
nature: { bg: ‘#f5f5dc’, accent: ‘#2d5016’, font: ‘Merriweather’ },
modern: { bg: ‘#f0f0f0’, accent: ‘#0066cc’, font: ‘Inter’ }
};

const saveVersion = () => {
const version = {
id: Date.now(),
content: currentPoem.content,
timestamp: new Date(),
note: ‘Auto-saved version’
};
setVersions([…versions, version]);
};

const addIdea = (idea) => {
setIdeas([…ideas, {
id: Date.now(),
content: idea,
created: new Date(),
linkedPoems: [],
tags: []
}]);
setShowNewIdea(false);
};

const addResearch = (research) => {
setResearch([…research, {
id: Date.now(),
title: research.title,
content: research.content,
source: research.source,
created: new Date()
}]);
setShowNewResearch(false);
};

const addToBook = (poemId) => {
const poem = poems.find(p => p.id === poemId);
if (poem && !bookSections.find(s => s.id === poemId)) {
setBookSections([…bookSections, { …poem, order: bookSections.length }]);
}
};

const exportToFormat = (format) => {
// Simulated export functionality
const content = bookSections.map(s => `${s.title}\n\n${s.content}`).join(’\n\n—\n\n’);
const blob = new Blob([content], { type: ‘text/plain’ });
const url = URL.createObjectURL(blob);
const a = document.createElement(‘a’);
a.href = url;
a.download = `${bookConfig.title}.${format}`;
a.click();
};

const generateHashtags = (content) => {
const common = [‘poetry’, ‘poetrycommunity’, ‘writersofinstagram’, ‘poem’, ‘writer’];
const words = content.toLowerCase().split(/\s+/);
const themes = words.filter(w => w.length > 5).slice(0, 3);
return […common, …themes.map(w => w.replace(/[^a-z]/g, ‘’))].slice(0, 8);
};

const shareToSocial = (platform) => {
const hashtags = generateHashtags(currentPoem.content);
const text = `${currentPoem.title}\n\n${currentPoem.content}\n\n${hashtags.map(h => '#' + h).join(' ')}`;

```
// Simulated social sharing
alert(`Sharing to ${platform}:\n\n${text}`);
setShowShareModal(false);
```

};

return (
<div className="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex flex-col">
{/* Top Navigation */}
<nav className="bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between shadow-sm">
<div className="flex items-center gap-3">
<div className="w-10 h-10 bg-gradient-to-br from-purple-600 to-indigo-600 rounded-lg flex items-center justify-center">
<Book className="w-6 h-6 text-white" />
</div>
<div>
<h1 className="text-xl font-bold text-gray-800">VerseForge</h1>
<p className="text-xs text-gray-500">Professional Poetry Suite</p>
</div>
</div>

```
    <div className="flex items-center gap-4">
      <button onClick={() => setShowShareModal(true)} className="flex items-center gap-2 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
        <Share2 className="w-4 h-4" />
        Share
      </button>
      <button onClick={() => setShowExportModal(true)} className="flex items-center gap-2 px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
        <Download className="w-4 h-4" />
        Export
      </button>
      <button onClick={() => setShowStoreModal(true)} className="flex items-center gap-2 px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition-colors">
        <ShoppingCart className="w-4 h-4" />
        Store
      </button>
    </div>
  </nav>

  {/* Main Content */}
  <div className="flex flex-1 overflow-hidden">
    {/* Sidebar */}
    <aside className="w-64 bg-white border-r border-gray-200 p-4 overflow-y-auto">
      <div className="space-y-2">
        <button
          onClick={() => setActiveTab('write')}
          className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
            activeTab === 'write' ? 'bg-purple-100 text-purple-700' : 'hover:bg-gray-100'
          }`}
        >
          <Edit3 className="w-5 h-5" />
          <span className="font-medium">Writing Studio</span>
        </button>
        
        <button
          onClick={() => setActiveTab('brainstorm')}
          className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
            activeTab === 'brainstorm' ? 'bg-purple-100 text-purple-700' : 'hover:bg-gray-100'
          }`}
        >
          <Lightbulb className="w-5 h-5" />
          <span className="font-medium">Idea Canvas</span>
        </button>
        
        <button
          onClick={() => setActiveTab('research')}
          className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
            activeTab === 'research' ? 'bg-purple-100 text-purple-700' : 'hover:bg-gray-100'
          }`}
        >
          <Search className="w-5 h-5" />
          <span className="font-medium">Research</span>
        </button>
        
        <button
          onClick={() => setActiveTab('compile')}
          className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
            activeTab === 'compile' ? 'bg-purple-100 text-purple-700' : 'hover:bg-gray-100'
          }`}
        >
          <Book className="w-5 h-5" />
          <span className="font-medium">Book Compiler</span>
        </button>
        
        <button
          onClick={() => setActiveTab('design')}
          className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
            activeTab === 'design' ? 'bg-purple-100 text-purple-700' : 'hover:bg-gray-100'
          }`}
        >
          <Palette className="w-5 h-5" />
          <span className="font-medium">Design Studio</span>
        </button>

        <button
          onClick={() => setActiveTab('ai-tools')}
          className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
            activeTab === 'ai-tools' ? 'bg-purple-100 text-purple-700' : 'hover:bg-gray-100'
          }`}
        >
          <Sparkles className="w-5 h-5" />
          <span className="font-medium">AI Assistant</span>
        </button>
        
        <button
          onClick={() => setActiveTab('analytics')}
          className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
            activeTab === 'analytics' ? 'bg-purple-100 text-purple-700' : 'hover:bg-gray-100'
          }`}
        >
          <BarChart3 className="w-5 h-5" />
          <span className="font-medium">Analytics</span>
        </button>
      </div>

      <div className="mt-6 pt-6 border-t border-gray-200">
        <h3 className="text-xs font-semibold text-gray-500 uppercase mb-3">Recent Poems</h3>
        <div className="space-y-1">
          {poems.slice(0, 5).map(poem => (
            <button
              key={poem.id}
              onClick={() => setCurrentPoem(poem)}
              className={`w-full text-left px-3 py-2 rounded text-sm hover:bg-gray-100 transition-colors ${
                currentPoem.id === poem.id ? 'bg-purple-50 text-purple-700' : 'text-gray-700'
              }`}
            >
              {poem.title}
            </button>
          ))}
