                  <Plus className="w-5 h-5" />
                </button>
              </div>
            </div>

            {/* Constraint Mode Toggle */}
            <div className="mb-4 flex items-center gap-4 p-3 bg-gray-50 rounded-lg">
              <label className="flex items-center gap-2">
                <input
                  type="checkbox"
                  checked={constraintMode.enabled}
                  onChange={(e) => setConstraintMode({...constraintMode, enabled: e.target.checked})}
                  className="rounded"
                />
                <span className="text-sm font-medium">Constraint Mode</span>
              </label>
              {constraintMode.enabled && (
                <div className="flex gap-2 text-sm">
                  <input
                    type="number"
                    placeholder="Syllables/line"
                    className="w-32 px-2 py-1 border rounded"
                    onChange={(e) => setConstraintMode({...constraintMode, syllables: e.target.value})}
                  />
                  <input
                    type="text"
                    placeholder="Rhyme (ABAB)"
                    className="w-32 px-2 py-1 border rounded"
                    onChange={(e) => setConstraintMode({...constraintMode, rhymeScheme: e.target.value})}
                  />
                </div>
              )}
            </div>

            <textarea
              value={currentPoem.content}
              onChange={(e) => setCurrentPoem({...currentPoem, content: e.target.value})}
              className="w-full h-96 p-4 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none font-serif text-lg leading-relaxed resize-none"
              placeholder="Write your poetry here..."
              style={{ fontFamily: bookConfig.font }}
            />

            <div className="mt-4 flex items-center gap-4">
              <button className="flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
                <Mic className="w-4 h-4" />
                Read Aloud
              </button>
              <button className="flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
                <Wand2 className="w-4 h-4" />
                AI Suggestions
              </button>
              <button className="flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
                <Clock className="w-4 h-4" />
                Version History ({versions.length})
              </button>
            </div>
          </div>
        </div>
      )}

      {activeTab === 'brainstorm' && (
        <div className="max-w-6xl mx-auto">
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-2xl font-bold">Idea Canvas</h2>
            <button
              onClick={() => setShowNewIdea(true)}
              className="flex items-center gap-2 px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600"
