                <div>
                  <p className="text-gray-500 text-sm">Books Compiled</p>
                  <p className="text-3xl font-bold">{bookSections.length > 0 ? 1 : 0}</p>
                </div>
                <Book className="w-10 h-10 text-blue-500" />
              </div>
            </div>

            <div className="bg-white rounded-xl shadow-lg p-6">
              <div className="flex items-center justify-between">
                <div>
                  <p className="text-gray-500 text-sm">Ideas Captured</p>
                  <p className="text-3xl font-bold">{ideas.length}</p>
                </div>
                <Lightbulb className="w-10 h-10 text-yellow-500" />
              </div>
            </div>
          </div>

          <div className="bg-white rounded-xl shadow-lg p-6">
            <h3 className="font-bold text-lg mb-4">Publishing & Sales</h3>
            <div className="space-y-4">
              <div className="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <span className="text-gray-700">Total Sales</span>
                <span className="font-bold text-xl">$0.00</span>
              </div>
              <div className="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <span className="text-gray-700">Social Media Shares</span>
                <span className="font-bold text-xl">0</span>
              </div>
              <div className="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <span className="text-gray-700">Website Visits</span>
                <span className="font-bold text-xl">0</span>
              </div>
            </div>
          </div>
        </div>
      )}
    </main>
  </div>

  {/* Share Modal */}
  {showShareModal && (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
      <div className="bg-white rounded-xl p-6 max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div className="flex justify-between items-center mb-6">
          <h3 className="text-2xl font-bold">Share Poetry</h3>
          <button onClick={() => setShowShareModal(false)} className="p-2 hover:bg-gray-100 rounded-lg">
            <X className="w-5 h-5" />
          </button>
        </div>

        {/* Preview */}
        <div className="mb-6 p-6 bg-gray-50 rounded-lg">
          <h4 className="font-bold text-lg mb-2">{currentPoem.title}</h4>
          <p className="whitespace-pre-wrap mb-4">{currentPoem.content}</p>
          <div className="flex flex-wrap gap-2">
            {generateHashtags(currentPoem.content).map(tag => (
              <span key={tag} className="text-sm bg-blue-100 text-blue-700 px-3 py-1 rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        </div>

        {/* Social Media Options */}
        <div className="space-y-3">
          <button
            onClick={() => shareToSocial('Instagram')}
            className="w-full flex items-center justify-between p-4 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg hover:from-purple-600 hover:to-pink-600 transition-colors"
          >
            <span className="font-medium">Share to Instagram</span>
            <ChevronRight className="w-5 h-5" />
          </button>

          <button
            onClick={() => shareToSocial('Twitter/X')}
            className="w-full flex items-center justify-between p-4 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors"
          >
            <span className="font-medium">Share to X (Twitter)</span>
            <ChevronRight className="w-5 h-5" />
          </button>

          <button
            onClick={() => shareToSocial('Facebook')}
            className="w-full flex items-center justify-between p-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
          >
            <span className="font-medium">Share to Facebook</span>
            <ChevronRight className="w-5 h-5" />
          </button>

          <button
            onClick={() => shareToSocial('WordPress')}
            className="w-full flex items-center justify-between p-4 bg-gray-700 text-white rounded-lg hover:bg-gray-800 transition-colors"
          >
            <span className="font-medium">Publish to WordPress</span>
            <ChevronRight className="w-5 h-5" />
          </button>
        </div>

        {/* Schedule Option */}
        <div className="mt-6 p-4 bg-blue-50 rounded-lg">
          <div className="flex items-center gap-3 mb-3">
            <Calendar className="w-5 h-5 text-blue-600" />
            <h4 className="font-semibold">Schedule Post</h4>
          </div>
          <div className="flex gap-3">
            <input
              type="datetime-local"
              className="flex-1 px-3 py-2 border rounded-lg"
            />
            <button className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
              Schedule
            </button>
          </div>
        </div>
      </div>
    </div>
  )}

  {/* Export Modal */}
  {showExportModal && (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
      <div className="bg-white rounded-xl p-6 max-w-lg w-full">
        <div className="flex justify-between items-center mb-6">
          <h3 className="text-2xl font-bold">Export Options</h3>
          <button onClick={() => setShowExportModal(false)} className="p-2 hover:bg-gray-100 rounded-lg">
            <X className="w-5 h-5" />
          </button>
        </div>

        <div className="space-y-3">
          <button
            onClick={() => exportToFormat('pdf')}
            className="w-full flex items-center justify-between p-4 bg-red-50 hover:bg-red-100 rounded-lg transition-colors"
          >
            <div className="flex items-center gap-3">
              <FileText className="w-5 h-5 text-red-600" />
              <div className="text-left">
                <div className="font-medium">PDF</div>
                <div className="text-sm text-gray-500">Print-ready PDF/X format</div>
              </div>
            </div>
            <Download className="w-5 h-5 text-red-600" />
          </button>

          <button
            onClick={() => exportToFormat('docx')}
            className="w-full flex items-center justify-between p-4 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors"
          >
            <div className="flex items-center gap-3">
              <FileText className="w-5 h-5 text-blue-600" />
              <div className="text-left">
                <div className="font-medium">Microsoft Word</div>
                <div className="text-sm text-gray-500">Standard manuscript format</div>
              </div>
            </div>
            <Download className="w-5 h-5 text-blue-600" />
          </button>

          <button
            onClick={() => exportToFormat('epub')}
            className="w-full flex items-center justify-between p-4 bg-green-50 hover:bg-green-100 rounded-lg transition-colors"
          >
            <div className="flex items-center gap-3">
              <Book className="w-5 h-5 text-green-600" />
              <div className="text-left">
                <div className="font-medium">EPUB</div>
                <div className="text-sm text-gray-500">E-reader compatible format</div>
              </div>
            </div>
            <Download className="w-5 h-5 text-green-600" />
          </button>

          <button
            onClick={() => exportToFormat('scrivener')}
            className="w-full flex items-center justify-between p-4 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors"
          >
            <div className="flex items-center gap-3">
              <FileText className="w-5 h-5 text-purple-600" />
              <div className="text-left">
                <div className="font-medium">Scrivener</div>
                <div className="text-sm text-gray-500">Export for Scrivener</div>
              </div>
            </div>
            <Download className="w-5 h-5 text-purple-600" />
          </button>

          <button
            onClick={() => exportToFormat('pages')}
            className="w-full flex items-center justify-between p-4 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors"
          >
            <div className="flex items-center gap-3">
              <FileText className="w-5 h-5 text-gray-600" />
              <div className="text-left">
                <div className="font-medium">Apple Pages</div>
                <div className="text-sm text-gray-500">Export for Pages</div>
              </div>
            </div>
            <Download className="w-5 h-5 text-gray-600" />
          </button>
        </div>

        {/* POD Integration */}
        <div className="mt-6 p-4 bg-yellow-50 rounded-lg">
          <h4 className="font-semibold mb-2 flex items-center gap-2">
            <Globe className="w-5 h-5 text-yellow-600" />
            Print-on-Demand
          </h4>
          <div className="space-y-2">
            <button className="w-full py-2 bg-white border border-yellow-300 rounded-lg hover:bg-yellow-100 text-sm">
              Upload to Amazon KDP
            </button>
            <button className="w-full py-2 bg-white border border-yellow-300 rounded-lg hover:bg-yellow-100 text-sm">
              Upload to IngramSpark
            </button>
          </div>
        </div>
      </div>
    </div>
  )}

  {/* Store Modal */}
  {showStoreModal && (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
      <div className="bg-white rounded-xl p-6 max-w-3xl w-full max-h-[90vh] overflow-y-auto">
        <div className="flex justify-between items-center mb-6">
          <h3 className="text-2xl font-bold">Store Setup</h3>
          <button onClick={() => setShowStoreModal(false)} className="p-2 hover:bg-gray-100 rounded-lg">
            <X className="w-5 h-5" />
          </button>
        </div>

        {/* Store Products */}
        <div className="mb-6">
          <div className="flex justify-between items-center mb-4">
            <h4 className="font-semibold text-lg">Products</h4>
            <button className="flex items-center gap-2 px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600">
              <Plus className="w-4 h-4" />
              Add Product
            </button>
          </div>

          {/* Sample Products */}
          <div className="space-y-3">
            <div className="p-4 border rounded-lg flex items-center justify-between">
              <div className="flex items-center gap-4">
                <div className="w-16 h-20 bg-gray-200 rounded flex items-center justify-center">
                  <Book className="w-8 h-8 text-gray-400" />
                </div>
                <div>
                  <h5 className="font-medium">Digital Ebook</h5>
                  <p className="text-sm text-gray-500">EPUB & PDF format</p>
                  <div className="flex items-center gap-4 mt-1">
                    <span className="text-sm font-semibold text-green-600">$9.99</span>
                    <span className="text-xs text-gray-400">ISBN: 978-3-16-148410-0</span>
                  </div>
                </div>
              </div>
              <button className="p-2 hover:bg-gray-100 rounded-lg">
                <Settings className="w-5 h-5" />
              </button>
            </div>

            <div className="p-4 border rounded-lg flex items-center justify-between">
              <div className="flex items-center gap-4">
                <div className="w-16 h-20 bg-gray-200 rounded flex items-center justify-center">
                  <Book className="w-8 h-8 text-gray-400" />
                </div>
                <div>
                  <h5 className="font-medium">Signed Paperback</h5>
                  <p className="text-sm text-gray-500">Limited edition with signature</p>
                  <div className="flex items-center gap-4 mt-1">
                    <span className="text-sm font-semibold text-green-600">$24.99</span>
                    <span className="text-xs text-gray-400">Stock: 50</span>
                  </div>
                </div>
              </div>
              <button className="p-2 hover:bg-gray-100 rounded-lg">
                <Settings className="w-5 h-5" />
              </button>
            </div>
          </div>
        </div>

        {/* Payment Integration */}
        <div className="mb-6 p-4 bg-blue-50 rounded-lg">
          <h4 className="font-semibold mb-3 flex items-center gap-2">
            <DollarSign className="w-5 h-5 text-blue-600" />
            Payment Gateways
          </h4>
          <div className="space-y-2">
            <label className="flex items-center gap-3 p-3 bg-white rounded-lg cursor-pointer hover:bg-gray-50">
              <input type="checkbox" className="rounded" />
              <div className="flex-1">
                <div className="font-medium">Stripe</div>
                <div className="text-sm text-gray-500">Credit cards, digital wallets</div>
              </div>
            </label>
            <label className="flex items-center gap-3 p-3 bg-white rounded-lg cursor-pointer hover:bg-gray-50">
              <input type="checkbox" className="rounded" />
              <div className="flex-1">
                <div className="font-medium">PayPal</div>
                <div className="text-sm text-gray-500">PayPal & Venmo</div>
              </div>
            </label>
          </div>
        </div>

        {/* Order Management Dashboard */}
        <div className="p-4 bg-gray-50 rounded-lg">
          <h4 className="font-semibold mb-3">Order Dashboard</h4>
          <div className="grid grid-cols-3 gap-4">
            <div className="text-center p-3 bg-white rounded-lg">
              <div className="text-2xl font-bold">0</div>
              <div className="text-sm text-gray-500">Pending</div>
            </div>
            <div className="text-center p-3 bg-white rounded-lg">
              <div className="text-2xl font-bold">0</div>
              <div className="text-sm text-gray-500">Shipped</div>
            </div>
            <div className="text-center p-3 bg-white rounded-lg">
              <div className="text-2xl font-bold">$0</div>
              <div className="text-sm text-gray-500">Revenue</div>
            </div>
          </div>
        </div>

        {/* Store URL */}
        <div className="mt-6">
          <label className="block text-sm font-medium mb-2">Your Store URL</label>
          <div className="flex gap-2">
            <input
              type="text"
              value="https://verseforge.store/your-username"
              readOnly
              className="flex-1 px-4 py-2 bg-gray-50 border rounded-lg"
            />
            <button
              onClick={() => {
                navigator.clipboard.writeText('https://verseforge.store/your-username');
                setCopied(true);
                setTimeout(() => setCopied(false), 2000);
              }}
              className="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg"
            >
              {copied ? <Check className="w-5 h-5 text-green-600" /> : <Copy className="w-5 h-5" />}
            </button>
          </div>
        </div>
      </div>
    </div>
  )}
</div>
```

);
};

export default VerseForge;